@model IEnumerable<Forum.Models.PostTopic>

@{
    ViewData["Title"] = "Index";
}

<h1>Posts tagged @Model.First().Topics.TopicName</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                       
                    <p>@item.Post.Body?.Substring(0, Math.Min((item.Post.Body ?? "").Length, 50))</p>
                </td>
            </tr>
        }
    </tbody>
</table>